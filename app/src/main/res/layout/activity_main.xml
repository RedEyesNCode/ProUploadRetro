<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/black"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:textColor="@android:color/holo_green_light"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/_21sdp"
            android:text="@string/retrofit_n_file_upload_with_progress"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="@dimen/_45sdp"
            android:id="@+id/ivUpload"
            android:layout_gravity="center"
            android:src="@drawable/retrofit_upload"
            android:layout_height="@dimen/_45sdp"/>
        <TextView
            android:layout_width="match_parent"
            android:textColor="@android:color/holo_green_light"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_gravity="center"

            android:gravity="center"
            android:textSize="@dimen/_15sdp"
            android:text="@string/uploading_progress_here"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@android:color/holo_blue_bright"

                android:fontFamily="sans-serif-condensed-medium"
                android:layout_gravity="center"
                android:id="@+id/tvPercentage"
                android:gravity="center"
                android:textSize="@dimen/_25sdp"
                android:text="0%"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-condensed-medium"
                android:layout_gravity="center"
                android:id="@+id/tvSpeed"
                android:visibility="gone"
                android:layout_marginStart="@dimen/_15sdp"
                android:gravity="center"
                android:textSize="@dimen/_15sdp"
                android:text="at 0 Kbps"
                android:layout_height="wrap_content"/>


        </LinearLayout>
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:layout_width="match_parent"
            android:id="@+id/progressBar"
            app:indicatorColor="@android:color/holo_green_light"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:indeterminate="false"
            android:background="@android:color/holo_red_dark"
            android:backgroundTint="@android:color/holo_red_dark"
            android:layout_marginBottom="@dimen/_24sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_height="@dimen/_15sdp"/>
    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="match_parent"
        android:src="@drawable/redeyesncode"
        android:id="@+id/selectedImage"
        app:civ_border_color="@android:color/holo_green_light"
        app:civ_border_width="@dimen/_2sdp"

        android:layout_margin="@dimen/_15sdp"
        android:layout_height="@dimen/_175sdp"/>
            <Button
                android:layout_width="match_parent"
                android:id="@+id/btnFileUpload"
                android:text="Upload Any File to Server "
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                android:textAllCaps="false"
                android:layout_marginHorizontal="@dimen/_4sdp"
                android:layout_height="wrap_content"/>
    <Button
        android:layout_width="match_parent"
        android:id="@+id/btnUploadImage"
        android:text="Upload Image to Server "
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp"
        android:textAllCaps="false"
        android:layout_marginHorizontal="@dimen/_4sdp"
        android:layout_height="wrap_content"/>

            <Button
                android:layout_width="match_parent"
                android:id="@+id/btnMultipleFiles"
                android:text="Try with Multiple Files "
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                android:textAllCaps="false"
                android:layout_marginHorizontal="@dimen/_4sdp"
                android:layout_height="wrap_content"/>

        </TableLayout>

    </ScrollView>


</LinearLayout>